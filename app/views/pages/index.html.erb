  if (heroMobileMenuButton && heroMobileMenu) {
    heroMobileMenuButton.addEventListener('click', function() {
      heroMobileMenu.classList.toggle('hidden');
    });
    
    // Close mobile menu when clicking outside
    document.addEventListener('click', function(event) {
      if (!heroMobileMenuButton.contains(event.target) && !heroMobileMenu.contains(event.target)) {
        heroMobileMenu.classList.add('hidden');
      }
    });
  }
});
</script>
