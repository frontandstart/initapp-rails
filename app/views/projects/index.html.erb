<% content_for :title, "Портфолио - Наши работы" %>
<% content_for :description, "Портфолио выполненных проектов - веб-разработка, мобильные приложения, дизайн" %>

<section class="portfolio-hero bg-gradient-to-br from-slate-50 to-blue-50 py-16 lg:py-24">
  <div class="container mx-auto px-6">
    <div class="text-center">
      <h1 class="text-4xl lg:text-6xl font-bold text-gray-900 mb-6">
        Наши работы
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Мы создаем цифровые решения, которые помогают бизнесу расти и развиваться. 
        Посмотрите на некоторые из наших проектов.
      </p>
    </div>
  </div>
</section>

<section class="py-16 lg:py-24">
  <div class="container mx-auto px-6">
    <% if @projects.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @projects.each do |project| %>
          <div class="portfolio-card group">
            <%= link_to project_path(project), class: "block" do %>
              <div class="relative overflow-hidden rounded-2xl bg-white shadow-lg hover:shadow-2xl transition-all duration-300 group-hover:scale-[1.02]">
                <% if project.photos.any? %>
                  <div class="aspect-[4/3] overflow-hidden">
                    <%= image_tag project.photos.first.thumbnail('600x450'), 
                        alt: project.photos.first.alt_text || project.title,
                        class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300",
                        loading: "lazy" %>
                  </div>
                <% else %>
                  <div class="aspect-[4/3] bg-gradient-to-br from-blue-100 to-purple-100 flex items-center justify-center">
                    <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                <% end %>
                
                <div class="p-6">
                  <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
                    <%= project.title %>
                  </h3>
                  
                  <% if project.description.present? %>
                    <p class="text-gray-600 line-clamp-3">
                      <%= truncate(strip_tags(project.description), length: 150) %>
                    </p>
                  <% end %>
                  
                  <div class="mt-4 flex items-center text-blue-600 font-medium">
                    Подробнее
                    <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <div class="max-w-md mx-auto">
          <svg class="w-20 h-20 text-gray-300 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
          <h3 class="text-xl font-medium text-gray-900 mb-2">Портфолио пока пусто</h3>
          <p class="text-gray-500">Скоро здесь появятся наши проекты</p>
        </div>
      </div>
    <% end %>
  </div>
</section>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
