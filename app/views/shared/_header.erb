<!-- Navigation Header -->
<header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-50">
  <nav class="px-6 py-4">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <!-- Logo -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center hover:opacity-80 transition-opacity" do %>
          <!-- Animated Gradient Cube Logo Variant 4 -->
          <div class="relative w-11 h-11 mr-3">
            <div class="gradient-cube">
              <div class="gradient-face gradient-front">
                <span class="text-white font-bold text-lg">R</span>
              </div>
              <div class="gradient-face gradient-top"></div>
              <div class="gradient-face gradient-right"></div>
            </div>
          </div>
          <span class="text-2xl gradient-text">ubyvkube</span>
        <% end %>
      </div>

      <style>
        @keyframes cubeRotate {
          0% { transform: rotateX(-15deg) rotateY(15deg); }
          25% { transform: rotateX(-15deg) rotateY(105deg); }
          50% { transform: rotateX(-15deg) rotateY(195deg); }
          75% { transform: rotateX(-15deg) rotateY(285deg); }
          100% { transform: rotateX(-15deg) rotateY(375deg); }
        }
        
        @keyframes gradientShift {
          0%, 100% { 
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
          }
          33% { 
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
          }
          66% { 
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
          }
        }
        
        .gradient-cube {
          position: relative;
          width: 44px;
          height: 44px;
          transform-style: preserve-3d;
          animation: cubeRotate 8s infinite linear;
        }
        
        .gradient-face {
          position: absolute;
          width: 44px;
          height: 44px;
          display: flex;
          align-items: center;
          justify-content: center;
          border-radius: 4px;
          box-shadow: inset 0 0 20px rgba(255, 255, 255, 0.1);
        }
        
        .gradient-front {
          transform: translateZ(22px);
          animation: gradientShift 10s infinite;
        }
        
        .gradient-top {
          transform: rotateX(90deg) translateZ(22px);
          background: linear-gradient(135deg, rgba(102, 126, 234, 0.8) 0%, rgba(118, 75, 162, 0.8) 100%);
        }
        
        .gradient-right {
          transform: rotateY(90deg) translateZ(22px);
          background: linear-gradient(135deg, rgba(102, 126, 234, 0.6) 0%, rgba(118, 75, 162, 0.6) 100%);
        }
        
        .gradient-cube:hover {
          animation-play-state: paused;
          transform: rotateX(-15deg) rotateY(15deg) scale(1.1);
          transition: transform 0.3s ease;
        }
      </style>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-2">
        <%= link_to "Главная", root_path, class: "px-4 py-2 rounded-xl text-sm font-medium transition-all duration-300 #{current_page?(root_path) ? 'bg-blue-100 text-blue-800 shadow-inner border-1 border-blue-200' : 'bg-blue-50 text-blue-700 shadow-lg hover:shadow-blue-200 hover:shadow-xl hover:bg-blue-100 border border-blue-100'}" %>
        <!-- <a href="#{root_path}#services" class="text-gray-700 hover:text-blue-600 transition-colors">Услуги</a> -->
        <%= link_to "Портфолио", portfolio_path, class: "px-4 py-2 rounded-xl text-sm font-medium transition-all duration-300 #{current_page?(portfolio_path) || controller_name == 'projects' ? 'bg-emerald-100 text-emerald-800 shadow-inner border-1 border-emerald-200' : 'bg-emerald-50 text-emerald-700 shadow-lg hover:shadow-emerald-200 hover:shadow-xl hover:bg-emerald-100 border border-emerald-100'}" %>
        <!-- <a href="#{root_path}#tech-stack" class="text-gray-700 hover:text-blue-600 transition-colors">Технологии</a> -->
        <%= link_to "Контакты", contacts_path, class: "px-4 py-2 rounded-xl text-sm font-medium transition-all duration-300 bg-amber-50 text-amber-700 shadow-lg hover:shadow-amber-200 hover:shadow-xl hover:bg-amber-100 border border-amber-100" %>
        <button onclick="openOrderModal()" class="bg-gradient-to-r from-cyan-500 to-blue-600 hover:from-cyan-600 hover:to-blue-700 text-white px-6 py-2 rounded-xl transition-all duration-300 font-medium text-sm ml-2 shadow-lg shadow-cyan-500/30 hover:shadow-xl hover:shadow-cyan-500/40 border border-cyan-400 hover:border-cyan-500">
          Оставить заявку
        </button>
      </div>
      
      <!-- Mobile menu button -->
      <button class="md:hidden text-gray-700" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile menu -->
    <div class="md:hidden hidden bg-white border-t border-gray-200 mt-4" id="mobile-menu">
      <div class="px-6 py-4 space-y-3">
        <%= link_to "Главная", root_path, class: "block px-4 py-2 rounded-xl text-sm font-medium transition-all duration-300 #{current_page?(root_path) ? 'bg-blue-100 text-blue-800 shadow-inner border-2 border-blue-200' : 'bg-blue-50 text-blue-700 shadow-lg hover:shadow-xl hover:bg-blue-100'}" %>
        <!-- <a href="#{root_path}#services" class="block text-gray-700 hover:text-blue-600 transition-colors">Услуги</a> -->
        <%= link_to "Портфолио", portfolio_path, class: "block px-4 py-2 rounded-xl text-sm font-medium transition-all duration-300 #{current_page?(portfolio_path) || controller_name == 'projects' ? 'bg-emerald-100 text-emerald-800 shadow-inner border-2 border-emerald-200' : 'bg-emerald-50 text-emerald-700 shadow-lg hover:shadow-xl hover:bg-emerald-100'}" %>
        <!-- <a href="#{root_path}#tech-stack" class="block text-gray-700 hover:text-blue-600 transition-colors">Технологии</a> -->
        <%= link_to "Контакты", contacts_path, class: "block px-4 py-2 rounded-xl text-sm font-medium transition-all duration-300 bg-amber-50 text-amber-700 shadow-lg hover:shadow-xl hover:bg-amber-100" %>
        <button onclick="openOrderModal()" class="block w-full bg-gradient-to-r from-cyan-500 to-blue-600 hover:from-cyan-600 hover:to-blue-700 text-white px-4 py-2 rounded-xl transition-all duration-300 text-center text-sm font-medium shadow-lg shadow-cyan-500/30 hover:shadow-xl hover:shadow-cyan-500/40 border border-cyan-400 hover:border-cyan-500">
          Оставить заявку
        </button>
      </div>
    </div>
  </nav>
</header>

<!-- Mobile menu toggle script -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', function() {
      mobileMenu.classList.toggle('hidden');
    });
    
    // Close mobile menu when clicking outside
    document.addEventListener('click', function(event) {
      if (!mobileMenuButton.contains(event.target) && !mobileMenu.contains(event.target)) {
        mobileMenu.classList.add('hidden');
      }
    });
  }
});
</script>